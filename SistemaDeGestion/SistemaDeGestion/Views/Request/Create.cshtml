@model SistemaDeGestion.Models.RequestModel

@{
    ViewBag.Title = "Solicitar Cotizacion";
}

<h2>Solicitar Cotización</h2>

<div class="alert alert-warning alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>¡Cuidado!</strong> 
</div>

<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("Create", "Request", FormMethod.Post))
        {
            @Html.ValidationMessage("Error", new { @class = "text-danger" })

            <div class="col-md-6">
                @Html.LabelFor(model => model.Nombre)
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
                <br />
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.Apellido)
                @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
                @Html.ValidationMessage("Apellido", new { @class = "text-danger" })
                <br />
            </div>
            <div class="col-md-6">
                @Html.LabelFor(model => model.Correo)
                @Html.TextBoxFor(model => model.Correo, new { @class = "form-control" })
                @Html.ValidationMessage("Correo", new { @class = "text-danger" })
                <br />
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Telefono)
                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control" })
                @Html.ValidationMessage("Telefono", new { @class = "text-danger" })
                <br />
            </div>
            <div class="form-group col-sm-6">

                @Html.LabelFor(model => model.Destino)
                @if (@ViewBag.destino != null)
                {
                    @Html.TextBoxFor(model => model.Destino, new { @class = "form-control", @Value = ViewBag.destino })
                }
                else
                {
                    @Html.TextBoxFor(model => model.Destino, new { @class = "form-control" })

                }
                @Html.ValidationMessage("Destino", new { @class = "text-danger" })

                <br />
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Origen)
                @Html.TextBoxFor(model => model.Origen, new { @class = "form-control" })
                @Html.ValidationMessage("Origen", new { @class = "text-danger" })
                <br />
            </div>
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.Descripcion)
                @Html.TextAreaFor(model => model.Descripcion, 4, 10, new { style = "width : 100%; max-width : 100%", @class = "form-control" })
                @Html.ValidationMessage("Descripcion", new { @class = "text-danger"})
                <br />
                <br />
            </div>
            <br />
            <br />
            <div>
                <input type="submit" class="btn btn-success" value="Aceptar" />
                <button onclick="document.location.href='@Url.Content("~/Home/Index")'" type="button" class="btn btn-danger">
                    Cancelar
                    <span class="glyphicon glyphicon-remove"></span>
                </button>
            </div>
        }
    </div>
</div>