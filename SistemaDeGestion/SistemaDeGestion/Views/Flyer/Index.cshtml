@model List<SistemaDeGestion.Models.FlyerModel>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    <button onclick="document.location.href='@Url.Content("~/Flyer/Create")'" class="btn btn-success">
        Agregar
        <span class="glyphicon glyphicon-plus"></span>
    </button>
</p>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Description</th>
                <th>Imagen</th>
            </tr>

            @foreach (var oElement in Model)
            {
        <tr>
            <td>@oElement.Id</td>
            <td>@oElement.Name</td>
            <td>@oElement.Description</td>
            <td>
                @if (!string.IsNullOrEmpty(oElement.Imagen))
                {
                    <img src="@Url.Content(oElement.Imagen)" alt="Image" style="width:100px; height:150px; max-width:100%; height:auto;" />
                }
            </td>
            <td>
                <button onclick="document.location.href='@Url.Content("~/Flyer/Edit/"+oElement.Id)'" type="button" class="btn btn-default">
                    Editar
                    <span class="glyphicon glyphicon-pencil"></span>
                </button>
                <button onclick="document.location.href='@Url.Content("~/Flyer/Delete/"+oElement.Id)'" type="button" class="btn btn-danger">
                    Eliminar
                    <span class="glyphicon glyphicon-trash"></span>
                </button>
            </td>
        </tr>
            }
        </table>
    </div>
</div>

