@model SistemaDeGestion.Models.ImageFlyer

@{
    ViewBag.Title = "Agregar Flyer";
}

<h2>Create</h2>

<div class="row">
    <div class="col-lg-12">

        @using (Html.BeginForm("Create", "Flyer", FormMethod.Post, new { role = "form", @class = "", enctype = "multipart/form-data" }))
        {
            @Html.ValidationMessage("Error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { @class = "form-control" })
            @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.Description)
            @Html.TextBoxFor(d => d.Description, new { @class = "form-control" })
            @Html.ValidationMessage("Description", new { @class = "text-danger" })
            <br />

            @Html.LabelFor(d => d.ImageFile)
            @Html.TextBoxFor(d => d.ImageFile, new { Type = "file" })
            @Html.ValidationMessage("Imagen", new { @class = "text-danger" })
            <br />
            <div style="text-align:right">
                <input type="submit" class="btn btn-success" value="Agregar" />
            </div>
        }

    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
